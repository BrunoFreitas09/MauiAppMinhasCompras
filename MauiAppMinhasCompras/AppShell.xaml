<?xml version="1.0" encoding="UTF-8" ?>
<!-- Definindo o Shell da aplicação, que gerencia a navegação de forma mais eficiente -->
<Shell
    x:Class="MauiAppMinhasCompras.AppShell" <!-- Define a classe de código por trás -->
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    <!-- Namespace do .NET MAUI -->
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    <!-- Namespace para a sintaxe XAML -->
    xmlns:local="clr-namespace:MauiAppMinhasCompras"
    <!-- Define o namespace da aplicação -->
    Shell.FlyoutBehavior="Disabled"
    <!-- Desabilita o comportamento do Flyout (menu lateral) -->
    Title="MauiAppMinhasCompras">
    <!-- Define o título do Shell -->

    <!-- Define um item de conteúdo no Shell (página principal) -->
    <ShellContent 
        Title="Home" <!-- Define o título do conteúdo -->
        ContentTemplate="{DataTemplate local:MainPage}"
        <!-- Define o template de conteúdo, associando a página MainPage -->
        Route="MainPage" />
        <!-- Define a rota que será usada para navegação -->

</Shell>
